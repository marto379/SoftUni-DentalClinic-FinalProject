@using DentalClinicSystem.Web.ViewModels.User
@model MakeDentistViewModel

<form asp-action="MakeDentist" asp-controller="User" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label-add-edit">Add required email</label>
        <input asp-for="@Model.Email" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.FirstName" class="form-label-add-edit">First Name</label>
        <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.LastName" class="form-label-add-edit">Last Name</label>
        <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">Phone Number</label>
        <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
                    <label asp-for="@Model.SpecializationId" class="form-label-add-edit">Choose Specialization: </label>
                    <select asp-for="@Model.SpecializationId" class="dropdown-menu-xxl-start aria-required="true">

                        @foreach (var treatment in Model.Specializations)
                        {
                            <option value="@treatment.Id">@treatment.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.SpecializationId" class="text-danger"></span>
                </div>
        <div class="mb-3">
            <input class="btn btn-secondary mb-2 w-30 p-3 fw-bold" type="submit" value="Create Dentist" />
        </div>
</form>


