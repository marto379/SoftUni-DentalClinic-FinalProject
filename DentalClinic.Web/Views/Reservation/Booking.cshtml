@model BookingViewModel


@{
    ViewBag.Title = "Add your information";
}
    <style>
        body {
            background-image: url("https://img.freepik.com/premium-photo/reminder-calendar-visiting-dentist-dental-appointment-check-calendar-tooth-dental-mirror_188237-1628.jpg?w=2000");
        }
    </style>
    
    <div>
        <h2 class="text-center">@ViewBag.Title</h2>

        <div class="row">

            <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

                <form asp-action="Booking" method="post">

                    <div class="mb-3">
                        <label asp-for="@Model.FirstName" class="form-label-add-edit">First Name</label>
                        <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.LastName" class="form-label-add-edit">Last Name</label>
                        <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">Phone Number</label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Date" class="form-label-add-edit">Choose Date</label>
                        <input asp-for="@Model.Date" class="form-control" type="date" date-val="true" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="mb-3">

                        <label asp-for="@Model.PreferredHour" class="form-label-add-edit">Preferred Hour</label>
                        <input asp-for="@Model.PreferredHour" class="form-control" type="time" date-val="true" aria-required="true" />
                        <span asp-validation-for="PreferredHour" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="@Model.TreatmentId" class="form-label-add-edit">Choose Treatment</label>
                        <select asp-for="@Model.TreatmentId" class="dropdown-item" aria-required="true">

                            @foreach (var treatment in Model.Treatments)
                            {
                                <option value="@treatment.Id">@treatment.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.TreatmentId" class="text-danger"></span>
                    </div>



                    <div class="mb-3">
                        <input class="btn btn-info mb-2 w-100 p-3 fw-bold" type="submit" value="Book Now" />
                    </div>


                </form>
            </div>
        </div>
    </div>
    />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}