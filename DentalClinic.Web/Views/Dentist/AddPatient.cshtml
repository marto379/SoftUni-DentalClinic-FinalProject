@using DentalClinicSystem.Web.ViewModels.Dentist
@model AddPatientViewModel

@{
    ViewBag.Title = "Add patient";
}
   
    <div>
        <h2 class="text-center">@ViewBag.Title</h2>

        <div class="row">

            <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

                <form asp-action="AddPatient" asp-controller="Dentist" method="post">

                    <div class="mb-3">
                        <label asp-for="@Model.FirstName" class="form-label-add-edit">First Name</label>
                        <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.LastName" class="form-label-add-edit">Last Name</label>
                        <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">Phone Number</label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Gender" class="form-label-add-edit">Gender</label>
                        <input asp-for="@Model.Gender" class="form-control" aria-required="true" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                     <div class="mb-3">
                        <label asp-for="@Model.PersonalId" class="form-label-add-edit">Personal Identification Number</label>
                        <input asp-for="@Model.PersonalId" class="form-control" aria-required="true" />
                        <span asp-validation-for="PersonalId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Email" class="form-label-add-edit">Email</label>
                        <input asp-for="@Model.Email" class="form-control" aria-required="true" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.ImageUrl" class="form-label-add-edit">ImageUrl</label>
                        <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    
                    <div class="mb-3">
                        <input class="btn btn-secondary mb-2 w-100 p-3 fw-bold" type="submit" value="Add patient" />
                    </div>


                </form>
            </div>
        </div>
    </div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}