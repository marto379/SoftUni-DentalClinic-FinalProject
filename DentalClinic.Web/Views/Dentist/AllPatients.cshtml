@model ICollection<PatientViewModel>

@{
    ViewBag.Title = "My Patients";
}

<h2>@ViewBag.Title</h2>
<div class="card-body">
    @if (!Model.Any())
    {
        <div>Your patient list is empty!</div>
    }
    else
    {
        @foreach (var patient in Model)
        {

            <div class="list-group-item bg-light mb-1">
                <h5 class="card-title mt-1 ">@patient.FirstName @patient.LastName</h5>
                <p class="mb-0"><span class="fw-bold">Phone Number: </span>@patient.PhoneNumber</p>
                <p class="mb-0"><span class="fw-bold">Gender: </span>@patient.Gender</p>
                <p class="mb-0"><span class="fw-bold">Personal Id: </span>@patient.PersonalId</p>

                <a asp-controller="Dentist" asp-action="PatientAppointments" asp-route-id="@patient.Id" class="btn btn-secondary">View Appointments</a>
                <a asp-controller="Patient" asp-action="PatientProfile" asp-route-id="@patient.Id" class="btn btn-secondary">View Profile</a>
                <a asp-controller="Dentist" asp-action="AddAppointment" asp-route-id="@patient.Id" class=" btn btn-secondary">Add appointment</a>
                <a asp-controller="Dentist" asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger" onclick="return confirm('Are you sure')">Delete</a>
            </div>
        }
    }

</div>
