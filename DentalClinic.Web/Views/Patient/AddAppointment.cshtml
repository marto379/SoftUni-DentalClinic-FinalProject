@using DentalClinicSystem.Web.ViewModels.Patient
@model AddAppointmentViewModel


@{
    ViewBag.Title = "Add appointment";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddAppointment" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label-add-edit">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label-add-edit">Last Name</label>
                <textarea asp-for="@Model.LastName" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TreatmentId" class="form-label-add-edit">Type of treatment</label>
                <select asp-for="@Model.TreatmentId" class="form-control" aria-required="true">
                    @foreach (var treatment in Model.Treatments)
                    {
                        <option value="@treatment.Id">@treatment.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.TreatmentId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Edit" />
            </div>
        </form>
    </div>


</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}