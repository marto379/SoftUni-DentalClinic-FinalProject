@model ICollection<BookingViewModel>
@{
    ViewBag.Title = "Patient Appointments";
}

<div class="text-left row">

    @foreach (var appoinment in Model)
    {
       //<a asp-route-id="@appoinment.us"
        <div class="card-body">
            <h5 class="card-title mt-1 ">@appoinment.FirstName @appoinment.LastName</h5>
            <p class="mb-0"><span class="fw-bold">Date: </span>@appoinment.Date</p>
            <p class="mb-0"><span class="fw-bold">Hour: </span>@appoinment.PreferredHour</p>
            <p class="mb-0"><span class="fw-bold">Treatment: </span>@appoinment.Treatment</p>
        </div>
    }
</div>